<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:textViewStyle">@style/BahnschriftTextViews</item>-->
        <!--<item name="buttonStyle">@style/BahnschriftButtonStyle</item>-->
    </style>

    <style name="BahnschriftTextViews" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/bahnschrift</item>
    </style>

    <style name="BahnschriftButtonStyle" parent="android:Widget.Holo.Button">
        <item name="android:fontFamily">@font/bahnschrift</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textViewStyle">@style/BahnschriftTextViews</item>
        <item name="buttonStyle">@style/BahnschriftButtonStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextIntroSlidersUp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextIntroSlidersDown">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ImageViewSliders">
        <item name="android:layout_width">256dp</item>
        <item name="android:layout_height">256dp</item>
        <item name="android:layout_marginBottom">24dp</item>
        <item name="android:contentDescription">@null</item>
    </style>


    <style name="CardViewMain" parent="CardView">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>


    <style name="ScoresTextMenu">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/bahnschrift</item>
        <item name="android:padding">22dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="ScoresImageMenu">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:alpha">0.2</item>
        <item name="android:contentDescription">Hello world</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ScoresCardMenu">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="RadioButtonAddAdjust">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/bahnschrift</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="ButtonStyleStartShooting" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="ImageMarkStyle">
        <item name="android:layout_width">@dimen/image_marks_size</item>
        <item name="android:layout_height">@dimen/image_marks_size</item>
        <item name="android:layout_marginTop">@dimen/image_marks_margin_top</item>
    </style>


    <style name="ImageArrowsStyle">
        <item name="android:layout_width">@dimen/image_arrows_size</item>
        <item name="android:layout_height">@dimen/image_arrows_size</item>
        <item name="android:layout_marginTop">@dimen/image_arrow_margin_top</item>
    </style>
</resources>
